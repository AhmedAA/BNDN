<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
          fx:controller="iseen.client.Controllers.TestController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Title " GridPane.halignment="RIGHT" GridPane.rowIndex="1"/>
        <Label text="Type " GridPane.halignment="RIGHT" GridPane.rowIndex="2"/>
        <Label text="Id " GridPane.halignment="RIGHT" GridPane.rowIndex="3"/>
        <Label text="Release date " GridPane.halignment="RIGHT" GridPane.rowIndex="4"/>
        <Label text="Description " GridPane.halignment="RIGHT" GridPane.rowIndex="5"/>
        <Button mnemonicParsing="false" text="Get Media" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                GridPane.valignment="CENTER" onAction="#GetAllMedia"/>
        <Label text="Press the botton to get from service " GridPane.halignment="RIGHT">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <DatePicker GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="ReleaseDate"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="Id"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="Type"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="Title"/>
        <TextArea prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5"
                  fx:id="Description"/>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</GridPane>
